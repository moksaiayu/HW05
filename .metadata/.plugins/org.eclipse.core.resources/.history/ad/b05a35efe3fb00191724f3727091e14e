
public class p31 {
	public static void main(String[] args)
	{
		CarO.showSum();
		CarO car1;
		car1 = new CarO(1234,25.0);
		car1.show();
		
		CarO.showSum();
		CarO car2;
		car2 = new CarO(4567,30.5);
		car2.show();
		
	}

}


class CarO
{
	private int num;
	private double gas;
	

public CarO()
{
	num = 0;
	gas = 0.0;
	System.out.println("生產了車子");
}
public CarO(int n, double g)
{
	num = n;
	gas = g;
	System.out.println("生產了車號為"+num+ "，汽車量為"+gas+"的車子");
}
public void show()
{
	System.out.println("車號是"+num);
	System.out.println("汽油量是"+gas);
}

}
